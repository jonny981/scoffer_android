<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape android:shape="rectangle">

            <solid android:color="#ffbababa" />

        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="4px"
        android:right="4px">

        <shape android:shape="rectangle">

            <gradient
                android:angle="90"
                android:endColor="#ff3557ff"
                android:startColor="#ff2337c7"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="#ff1c1f67" />
        </shape>

    </item>
</layer-list>