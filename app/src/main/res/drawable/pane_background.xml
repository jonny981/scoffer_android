<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item android:left="7px"
        android:top="4px">
        <shape android:shape="rectangle">

            <solid android:color="@color/background_shadow" />

        </shape>
    </item>

    <!-- White Top color -->
    <item
        android:bottom="3px">

        <shape android:shape="rectangle">

            <solid android:color="@color/background_fill" />
            <stroke
                android:width="1px"
                android:color="#ffa5a5a5" />
        </shape>

    </item>
</layer-list>