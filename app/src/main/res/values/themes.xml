<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- the theme applied to the application or activity -->
    <style name="ScofferTheme"
           parent="@android:style/Theme.Holo">
        <item name="android:actionBarStyle">@style/ScofferActionBar</item>
        <item name="android:actionMenuTextColor">@color/scoffer_text_light</item>
    </style>

    <style name="ScofferThemeLight"
        parent="@android:style/Theme.Holo.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/ScofferActionBar</item>
        <item name="android:actionMenuTextColor">@color/scoffer_text_light</item>
        <item name="android:textColorSecondary">@color/scoffer_red</item>
    </style>

    <!-- ActionBar styles -->
    <style name="ScofferActionBar"
           parent="@android:style/Widget.Holo.ActionBar">
        <item name="android:background">@color/scoffer_red</item>
        <item name="android:backgroundStacked">@color/scoffer_red</item>
        <item name="android:backgroundSplit">@color/scoffer_red</item>
        <item name="android:logo">@drawable/scoffer_logo</item>
        <item name="android:textColor">@color/scoffer_text_light</item>
        <item name="android:titleTextStyle">@style/ScofferTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="ScofferTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/scoffer_text_light</item>
    </style>

    <!--ActionBar title text -->
    <style name="ScofferActionBarTitleText"
           parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/scoffer_text_light</item>
    </style>
</resources>